extends dashboard

block content

    .register-tab.col-lg-6.col-sm-12.col-md-9.mx-auto
        //- ul.nav.nav-pills.nav-fill(role="tablist")
        //-     li.nav-link.active
        //-         a.nav-link(href='/dashboard/register') Register Car
        //-     li.nav-link
        //-         a.nav-link(href='/dashboard/register/washer') Register Car

        ul#pills-tab.nav.nav-pills.nav-fill(role="tablist")
            li.nav-item(role="presentation")
                a#pills-home-tab.nav-link.active(data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true") Register Car
            li.nav-item(role="presentation")
                a#pills-profile-tab.nav-link(data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false") Register Washer
            
        #pills-tabContent.tab-content
            #pills-home.tab-pane.fade.show.active(role="tabpanel" aria-labelledby="pills-home-tab")
                form.register(name='register-car' action='/dashboard/register/car' method='POST')
                    .form-row
                        .col-md-6.col-sm-12
                            small#numberplate-error
                            input#numberplate.form-control(type='text' name='numberplate' placeholder='Enter Car Number Plate')
                            br
                        .col-md-6.col-sm-12
                            small#cartype-error
                            input#cartype.form-control(type='text' name='cartype' placeholder='Enter Car Type')
                            br
                    .form-row
                        .col-md-6.col-sm-12
                            small#doa-error
                            input#doa.form-control(type='date' name='doa')
                            br
                        .col-md-6.col-sm-12
                            small#toa-error
                            input#toa.form-control(type='time' name='toa')
                            br
                    .form-row
                        .col-md-6.col-sm-12
                            small#package-error
                            select#select-package.form-control(name='package')
                                option Select Package
                                option(value="smallcars") Small cars(10,000/=)
                                option(value="medium") Medium(15,000/=)
                                option(value="fullwash") Full wash(20,000/=)
                                option(value="bodaboda") Boda-boda(5,000/=)
                                option(value="engine") Engine(10,000/=)
                        .col-md-6.col-sm-12
                            small#washer-error
                            select#select-washer.form-control(name='washer')
                                option Assign Washer
                                option(value="sembuye") Sembuye Isaac
                                option(value="bisaso") Bisaso Moze
                    .form-row
                        .col.form-group
                            br
                            button.btn.btn-primary.btn-block Register Car               
                        
                  
            #pills-profile.tab-pane.fade(role="tabpanel" aria-labelledby="pills-profile-tab")
                form.register(name='register-car' action='/dashboard/register/car' method='POST')
                    .form-row
                        .col-md-6.col-sm-12
                            small#washname-error
                            input#washername.form-control(type='text' name='washername' placeholder='Enter Kanaabe Name')
                            br
                        .col-md-6.col-sm-12
                            small#gender-error
                            select.form-control(name="gender")
                                option Gender
                                option(value="female") Female
                                option(value="male") Male

                
                        
                    

          
                    
